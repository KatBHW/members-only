<% provide(:title, "Posts") %>
<h1>All posts</h1>

<% @posts.each do |post| %>
  
    <li>Post title: <%= post.title %></li>
    <li>Post content: <%= post.body %></li>

		<% if signed_in? %>
			<li>Post author: <%= User.find_by(id: post.user_id).name %></li>
		<% end %>
		</br>
		
<% end %>

<% if signed_in? %>
	<%= link_to "Create new post", new_post_path %>
<% end %>

